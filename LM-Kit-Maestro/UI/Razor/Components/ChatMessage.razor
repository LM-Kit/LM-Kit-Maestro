@inherits ComponentBase

@inject IClipboardHandler ClipboardHandler

<div class="rootContainer">
    <div class="messageDiv @(MessageViewModel.Sender == MessageSender.User ? "userMessageDiv" : "assistantMessageDiv")">
        <div style="display:flex">

            @if (MessageViewModel.Sender == MessageSender.User)
            {
                <span class="status">
                    @(GetStatusText(MessageViewModel.Status))
                </span>
            }

            <div class="messageContent @(MessageViewModel.Sender == MessageSender.Assistant ? "assistantMessageContent" : "userMessageContent")">
                @if (MessageViewModel.Sender == MessageSender.Assistant)
                {
                    if (MessageHtml != null)
                    {
                        @((MarkupString)MessageHtml)
                    }
                }
                else
                {
                    @MessageViewModel.Text
                }
            </div>
        </div>
    </div>

    <div class="messageFooter">
        @if (MessageViewModel.Sender == MessageSender.User)
        {
            <div class="messageActions userMessageActions">
                <span>
                    <button @onclick="OnCopyMessageButtonClicked" class="chatActionButton material-icons chatActionIcon">
                        @(MessageJustCopied ? "check" : "content_copy")
                    </button>
                </span>
            </div>
        }
        else
        {
            @*             <div class="align-right assistantResponseStats">
        <span>
        8.62 tok/sec • 281 tokens • 15.15s to first token • Stop: userStopped
        </span>
        </div> *@

            <div class="messageActions">
                <span>
                    <button @onclick="OnCopyMessageButtonClicked" class="chatActionButton material-icons chatActionIcon">
                        @(MessageJustCopied ? "check" : "content_copy")
                    </button>
                </span>
            </div>
        }
    </div>

</div>

